{
  "name": "nodecg-cli",
  "description": "The NodeCG command line interface.",
  "version": "4.0.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/nodecg/nodecg-cli.git"
  },
  "bugs": {
    "url": "http://github.com/nodecg/nodecg-cli/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://github.com/nodecg/nodecg-cli/blob/master/LICENSE"
    }
  ],
  "bin": {
    "nodecg": "bin/nodecg"
  },
  "files": [
    "AUTHORS",
    "LICENSE",
    "README.md",
    "index.js",
    "lib/",
    "commands/",
    "bin/"
  ],
  "engines": {
    "node": ">= 0.11.22"
  },
  "preferGlobal": true,
  "dependencies": {
    "bower": "^1.3.12",
    "chalk": "^0.5.1",
    "commander": "^2.6.0",
    "inquirer": "^0.11.4",
    "json-schema-defaults": "^0.1.1",
    "npm-package-arg": "^3.0.0",
    "request": "^2.51.0",
    "rimraf": "^2.2.8",
    "semver": "^4.2.0"
  },
  "devDependencies": {
    "chai": "^2.0.0",
    "coveralls": "^2.11.2",
    "eslint": "^2.0.0",
    "eslint-config-xo": "^0.10.1",
    "istanbul": "^0.3.5",
    "lcov-filter": "0.0.1",
    "mkdirp": "^0.5.1",
    "mocha": "^2.1.0",
    "pre-commit": "^1.1.2",
    "sinon": "^1.12.2",
    "temp": "^0.8.3"
  },
  "scripts": {
    "test": "npm run static && istanbul cover ./node_modules/mocha/bin/_mocha -- -R spec",
    "coveralls": "node node_modules/lcov-filter/index.js ./coverage/lcov.info test tmp | coveralls && rm -rf ./coverage",
    "static": "eslint -c .eslintrc index.js lib/**/*.js test/**/*.js bin/**/*.js commands/**/*.js"
  },
  "pre-commit": [
    "jshint"
  ],
  "license": "MIT"
}
